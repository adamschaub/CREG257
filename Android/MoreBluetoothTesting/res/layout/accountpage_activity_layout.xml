<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/enableDisableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bbutton_primary"
        android:text="Enable/Disable Lock" />

    <ImageButton
        android:id="@+id/lockImageButton"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/locked" />

    <TextView
        android:id="@+id/lockStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lockImageButton"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
