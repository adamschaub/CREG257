<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.morebluetoothtesting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider android:name="KeyPassFileProvider" android:authorities="com.example.morebluetoothtesting.provider" android:exported="true"></provider>
        <activity
            android:name="com.example.morebluetoothtesting.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.morebluetoothtesting.BluetoothDiscover"
            android:label="@string/title_activity_bluetooth_discover"
            android:parentActivityName="com.example.morebluetoothtesting.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.morebluetoothtesting.MainActivity" />
        </activity>
        <activity
            android:name=".KeyPassFileOpener"
            android:label="@string/title_activity_key_pass_file_opener" 
            android:parentActivityName="com.example.morebluetoothtesting.MainActivity" >
            <intent-filter>
		    	<action android:name="android.intent.action.VIEW" />
		    	<category android:name="android.intent.category.DEFAULT" />
		    	<category android:name="android.intent.category.BROWSABLE" />
		    	<data android:scheme="file" android:pathPattern=".*\\.phnky" android:mimeType="application/octet-stream"/>
				<data android:scheme="content" android:pathPattern=".*\\.phnky" android:mimeType="application/octet-stream"/>
		    </intent-filter>
        </activity>
        <service android:name=".MainService"></service>
    </application>

</manifest>